{
	"references": [
		{ "path": "../mimcss" },
		{ "path": "../mimbl" },
		{ "path": "../mimurl" }
	],
	"compilerOptions": {
		"declaration": true,
		"composite": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"preserveConstEnums": false,
        "noEmitOnError": true,
        "module": "ESNext",
        "moduleResolution": "node",
		"target": "ES2017",
		"lib": [ "ES2017", "dom" ],
		"rootDir": "src",
		"outDir": "./lib/",
		"jsx": "react",
		"jsxFactory": "mim.jsx",
		"jsxFragmentFactory": "mim.Fragment",
        "types": []
	},

	"include": [
		"./src/**/*"
	]
}